<%- include("../partials/header") %>
<div class="container">
    <h1 style="text-align: center;">Edit Comment</h1>
    <div style="width: 30%; margin: 2rem auto;">

        <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <!-- comment[text] and comment[author] puts those properties in req.body.comment object -->
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>"></div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Submit</button></div>
        </form>
        <a href="/campgrounds/">Go back</a>
    </div>
</div>


<%- include("../partials/footer") %>